{
  "_comment": "Build with `packer build packer.virtualbox.json`",
  "variables": {
    "packagename": "ubuntu-22.04-amd64.virtualbox",
    "hostname": "ubuntu-2204",
    "cpu_number": "2",
    "memory_size": "4096",
    "preseed": "preseed.cfg",
    "ssh_fullname": "vagrant",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "iso_checksum": "84aeaf7823c8c61baa0ae862d0a06b03409394800000b3235854a6b38eb4856f",
    "iso_checksum_type": "sha256",
    "iso_name": "ubuntu-22.04-live-server-amd64.iso",
    "iso_path": "../iso",
    "iso_url": "https://releases.ubuntu.com/jammy/ubuntu-22.04-live-server-amd64.iso"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "name": "ubuntu-2204",
      "guest_os_type": "ubuntu-64",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `packagename` }}",
      "disk_size": 60000,
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_urls": [
        "{{user `iso_path`}}/{{user `iso_name`}}",
        "{{user `iso_url`}}"
      ],
      "ssh_handshake_attempts": "3",
      "ssh_timeout": "20m",
      "shutdown_command": "echo '{{user `ssh_password`}}'|sudo -S shutdown -P now",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_port": 22,
      "communicator": "ssh",
      "http_directory": "../../../http",
      "cpus": "{{user `cpu_number`}}",
      "memory": "{{user `memory_size`}}",
      "boot_wait": "5s",
      "boot_command": [
        "c<wait>",
        "linux /casper/vmlinuz --- autoinstall ds=\"nocloud-net;seedfrom=http://{{.HTTPIP}}:{{.HTTPPort}}/\"",
        "<enter><wait>",
        "initrd /casper/initrd",
        "<enter><wait>",
        "boot",
        "<enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../../../scripts/init.sh",
        "../../../scripts/motd.sh",
        "../../../scripts/vagrant.sh",
        "../../../scripts/virtualbox.sh",
        "../../../scripts/cleanup.sh"
      ],
      "expect_disconnect": true,
      "execute_command": "echo '{{user `ssh_password`}}' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": "9",
        "output": "./output/{{ user `packagename` }}.box"
      }
    ],
    {
      "type": "vagrant-cloud",
      "box_tag": "turknet-devops/ubuntu-22.04",
      "vagrant_cloud_url": "https://vagrantcloud.com/api/v1",
      "access_token": "{{user `cloud_token`}}",
      "version": "{{user `version`}}"
    }
  ]
}