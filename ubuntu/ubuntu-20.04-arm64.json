{
  "_comment": "Build with `packer build packer.parallels.json`",
  "variables": {
    "packagename": "ubuntu-20.04-arm64.parallels",
    "hostname": "ubuntu-2004",
    "cpu_number": "2",
    "memory_size": "4096",
    "preseed": "preseed.cfg",
    "ssh_fullname": "vagrant",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "iso_checksum": "fef8bc204d2b09b579b9d40dfd8c5a084f8084a9bffafe8a0f39a0e53606312d",
    "iso_checksum_type": "sha256",
    "iso_name": "ubuntu-20.04.4-live-server-arm64.iso",
    "iso_path": "../iso",
    "iso_url": "https://cdimage.ubuntu.com/releases/20.04/release/ubuntu-20.04.4-live-server-arm64.iso",
    "build_directory": "../output"
  },
  "builders": [
    {
      "type": "parallels-iso",
      "name": "ubuntu-2004",
      "guest_os_type": "ubuntu",
      "parallels_tools_flavor": "lin-arm",
      "prlctl_version_file": ".prlctl_version",
      "output_directory": "{{ user `build_directory` }}/packer-{{user `template`}}-parallels",
      "vm_name": "{{ user `packagename` }}",
      "disk_size": 60000,
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_urls": [
        "{{user `iso_path`}}/{{user `iso_name`}}",
        "{{user `iso_url`}}"
      ],
      "ssh_handshake_attempts": "3",
      "ssh_timeout": "20m",
      "shutdown_command": "echo '{{user `ssh_password`}}'|sudo -S shutdown -P now",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_port": 22,
      "communicator": "ssh",
      "http_directory": "./http",
      "cpus": "{{user `cpu_number`}}",
      "memory": "{{user `memory_size`}}",
      "boot_wait": "10s",
      "boot_command": [
        "<esc>",
        "linux /casper/vmlinuz",
        " quiet",
        " autoinstall",
        " ds='nocloud-net;s=http://{{.HTTPIP}}:{{.HTTPPort}}/'",
        "<enter>",
        "initrd /casper/initrd<enter>",
        "boot<enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "./scripts/init.sh",
        "./scripts/motd.sh",
        "./scripts/vagrant.sh",
        "./scripts/parallels.sh",
        "./scripts/cleanup.sh",
        "./scripts/minimize.sh"
      ],
      "expect_disconnect": true,
      "execute_command": "echo '{{user `ssh_password`}}' | {{.Vars}} sudo -S -E bash -eux '{{.Path}}'"
    }
  ],
  "post-processors": [
    {
      "output": "{{ user `build_directory` }}/tn-ubuntu2004.{{.Provider}}.box",
      "type": "vagrant"
    }
  ]
}