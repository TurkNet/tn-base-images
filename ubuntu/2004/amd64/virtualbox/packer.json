{
  "_comment": "Build with `packer build packer.virtualbox.json`",
  "variables": {
    "packagename": "ubuntu-20.04-amd64.virtualbox",
    "hostname": "ubuntu-2004",
    "cpu_number": "2",
    "memory_size": "4096",
    "preseed": "preseed.cfg",
    "ssh_fullname": "vagrant",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "iso_checksum": "f8e3086f3cea0fb3fefb29937ab5ed9d19e767079633960ccb50e76153effc98",
    "iso_checksum_type": "sha256",
    "iso_name": "ubuntu-20.04.3-live-server-amd64.iso",
    "iso_path": "../iso",
    "iso_url": "https://old-releases.ubuntu.com/releases/20.04.1/ubuntu-20.04.3-live-server-amd64.iso"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "name": "ubuntu-2004",
      "guest_os_type": "ubuntu-64",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `packagename` }}",
      "disk_size": 30000,
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_urls": [
        "{{user `iso_path`}}/{{user `iso_name`}}",
        "{{user `iso_url`}}"
      ],
      "ssh_handshake_attempts": "3",
      "ssh_timeout": "20m",
      "shutdown_command": "echo '{{user `ssh_password`}}'|sudo -S shutdown -P now",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_port": 22,
      "communicator": "ssh",
      "http_directory": "../../../http",
      "cpus": "{{user `cpu_number`}}",
      "memory": "{{user `memory_size`}}",
      "boot_wait": "5s",
      "boot_command": [
        " <wait>",
        " <wait>",
        " <wait>",
        " <wait>",
        " <wait>",
        "<esc><wait>",
        "<f6><wait>",
        "<esc><wait>",
        "<bs><bs><bs><bs><wait>",
        " autoinstall<wait5>",
        " ds=nocloud-net<wait5>",
        ";s=http://<wait5>{{.HTTPIP}}<wait5>:{{.HTTPPort}}/<wait5>",
        " ---<wait5>",
        "<enter><wait5>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../../../scripts/init.sh",
        "../../../scripts/motd.sh",
        "../../../scripts/vagrant.sh",
        "../../../scripts/virtualbox.sh",
        "../../../scripts/cleanup.sh"
      ],
      "expect_disconnect": true,
      "execute_command": "echo '{{user `ssh_password`}}' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": "9",
        "output": "./output/{{ user `packagename` }}.box"
      }
    ],
    {
      "type": "vagrant-cloud",
      "box_tag": "turknet-devops/ubuntu-20.04",
      "vagrant_cloud_url": "https://vagrantcloud.com/api/v1",
      "access_token": "{{user `cloud_token`}}",
      "version": "{{user `version`}}"
    }
  ]
}